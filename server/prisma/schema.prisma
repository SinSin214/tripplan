generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  email         String    @id
  username      String    @unique
  password      String
  createdAt    DateTime? @default(now())
  isActive     Boolean   @default(false)
  refreshToken String[]  @unique
}

model Post {
  id          String    @id @default(uuid())
  title       String    @unique
  author      String
  createdAt  DateTime? @default(now())
  modifiedAt DateTime?
  rating      Int?
  images      String[]
  content     Json
}
