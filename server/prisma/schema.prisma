generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  email        String    @id
  username     String    @unique
  password     String
  createdAt    DateTime? @default(now())
  isActive     Boolean   @default(false)
  refreshToken String[]  @unique
}

model Thread {
  id          String    @id(map: "Post_pkey") @default(uuid())
  title       String    @unique(map: "Post_title_key")
  author      String
  createdAt   DateTime? @default(now())
  modifiedAt  DateTime?
  rating      Int?
  images      String[]
  content     Json      @db.Json
  description String?
}
