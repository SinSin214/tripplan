generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_CONNECTION")
}

model user {
    id            String      @id @default(uuid())
    email         String      @unique
    username      String      @unique
    password      String
    createdAt     DateTime    @default(now())
}

model post {
    id                String        @id @default(uuid())
    title             String        @unique
    description       String      
    content           String      
    highlights        String[]
    image_path        String[]    
    main_image_path   String[]
    createdBy         String
    createdAt         DateTime      @default(now())
    rating            Int
}